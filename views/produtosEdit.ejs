<%- include ('partials/head.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container container-fluid pt-4">
  <h1>Produtos</h1>
  <hr class="linha-divisoria">
  <div class="card">
    <div class="card-header">
      <h1>Cadastrar Produto</h1>
    </div>

    <div class="card-body">
      <form action="/produtos/update" method="post" enctype="multipart/form-data">
        <div class="input-group input-group-sm mb-3">
          <img
          src="<%= produto.imagem %>"
          alt="<%= produto.nome %>"
          class="img-fluid" width="350px"
          />
        </div>
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm"
            >Nome do Produto</span
          >
          <input
            type="text"
            class="form-control"
            name="nome"
            value="<%= produto.nome %>"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
            required
          />
        </div>
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm"
            >Preço</span
          >
          <input
            type="text"
            class="form-control"
            name="preco"
            value="<%= produto.preco %>"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
            required
          />
        </div>
        <div class="input-group input-group-sm mb-3">
          <span class="input-group-text" id="inputGroup-sizing-sm"
            >categoria</span
          >
          <input
            type="text"
            class="form-control"
            name="categoria"
            value="<%= produto.categoria %>"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm"
            required
          />
        </div>
        <input
          type="submit"
          class="btn btn-outline-success"
          value="Editar"
          onclick="return confirm('Confirma as alterações para o produto <%= produto.nome %>?')"
        />
        <input type="hidden" name="id" value="<%= produto.id %>">
      </form>
      <hr />
    </div>
  </div>
</div>
<%- include ('partials/footer.ejs') %>
